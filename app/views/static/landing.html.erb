<div class="row">
	<div class="small-5 columns">
		<ul class="small-block-grid-1">
			<li><%= image_tag 'splash-logo.jpg' %></li>
		</ul>
	</div>
	<div class="small-7 columns">
		<h1>Welcome to Tiny-Poster!</h1>
		<%= form_for(:sessions, url: session_path) do |form| %>
			<fieldset>
				<legend>Log-in to access Tiny-Poster</legend>
				<div>
					<% flash.each do |type, message| %>
						<h1><%= message %></h1>
					<% end %>
					<%= form.label :email %>
					<%= form.text_field :email %>
					<%= form.label :password %>
					<%= form.password_field :password %>
				</div>
				<div><%= form.submit "Sign In", class: "button" %></div>
				<div>New to Tiny-Poster? <%= link_to "Sign up now!", new_user_path %></div>
		<% end %>

	</div>
</div>