<%= form_for @post, url: { action: 'create' } do |f| %>
	<fieldset>
		<legend>Create a Tiny Post</legend>
		<% # for any error create a small warning label %>
		<% if @post.errors.any? %>
			<% @post.errors.full_messages.reverse.each do |error_message| %>
			<div class="alert-box warning radius">
				<%= error_message %>
			</div>
			<% end %>
		<% end %>
		<div class="row">
			<div class="small-12 columns">
				<% placement = ["Hola, amigo!", "こんにちは！", "Hello, world!", "Write in me!"].sample %>
				<%= f.text_area :content, placeholder: placement, maxlength: 140, required: "required" %>
			</div>
		</div>
		<div class="row">
			<div class="small-12 columns">
				<% button_labels = ["Share!", "Create!", "Launch!"].sample %>
				<%= f.submit button_labels, class: "button expand radius" %>
			</div>
		</div>
	</fieldset>
<% end %>